<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("partials/head.ejs") %>
</head>
<body>
    <%- include ("partials/navbar.ejs") %>
    <%- include ("partials/header.ejs") %>
    <%- include ("partials/alert.ejs") %>
    <main>
        <i class="banner">
            <input checked type="radio" name="s" style="background-image: url('/src/consulta.jpg');" title="Gauto 1">
            <input type="radio" name="s" style="background-image: url('/src/faciais.png');" title="Gauto 2">
            <input type="radio" name="s" style="background-image: url('/src/cursos.png');" title="Gauto 3">
        </i>
        <div class="itens">
            <% itens.forEach((item)=>{ %>
                <a class="product" href="/item/<%= item.id %>">
                    <div class="image">
                        <% if(item.images[0]){%>
                            <img src="data:image/jpg;base64,<%= item.images[0].image %>" alt="">
                        <% } %>
                    </div>
                    <p class="description"><%= item.name %></p>
                    <div class="rate">
                        <% for(let i = 0; i < 5; i++){ %>
                            <% if(i+1 > item.mRate){ %>
                                    <img src="data:image/svg+xml;base64," alt="">
                                <% }else{ %>
                                    <img src="data:image/svg+xml;base64," alt="">
                            <% } %>
                        <% } %>
                    </div>
                    <p class="price descount">R$ <%= item.price.toFixed(2) %> </p>
                    <p class="price">R$ <%= (item.price - (item.price * (item.descount/100))).toFixed(2) %> Em promoção</p>
                    <div class="buy">
                        <button class="buy-button">Comprar</button>
                    </div>
                </a>
            <% }) %>
        </div>
    </main>
    <%- include ("partials/footer.ejs") %>
</body>
</html>