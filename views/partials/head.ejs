<script>
    //quando a pagina carregar
    $(document).ready(function(){
        let initialWith = document.body.clientWidth;
        let initialHeight = document.body.clientHeight;
        let baseWith = 1920;
        if(initialWith > initialHeight && initialWith > baseWith){
            let newWith = (initialWith * 100) / baseWith;
            $('body').css('zoom', `${newWith}%`);
            //scale the text to the new zoom
            let newFontSize = (initialWith * 100) / baseWith;
            $('body').css('font-size', `${newFontSize}%`);
            $('a>p').css('font-size', `${newFontSize/2.5}%`);
            $('h1').css('font-size', `${newFontSize}%`);
            $('button').css('font-size', `${newFontSize/2}%`);
            $('input[type="text"]').css('font-size', `${newFontSize/2}%`);
            $('input[type="submit"]').css('font-size', `${newFontSize/2}%`);
        }
        console.log(document.body);
    });
</script>
