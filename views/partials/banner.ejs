<i class="banner">
    <input checked type="radio" name="s" style="background-image: url('/src/banner (1).jpg');">
    <input type="radio" name="s" style="background-image: url('/src/banner (2).jpg');">
    <input type="radio" name="s" style="background-image: url('/src/banner (3).jpg');">
</i>
<script>
    let banner = document.querySelector('.banner');
    let radios = document.querySelectorAll('input[name="s"]');
    let current = 0;
    let max = radios.length;
    let time = 5000;

    function start(){
        setInterval(() => {
            radios[current].checked = false;
            current++;
            if(current >= max){
                current = 0;
            }
            radios[current].checked = true;
        }, time);
    }

    start();
</script>